node {
    def app

    stage('Clone repository') {
        /* Cloning the Repository to our Workspace */

        checkout scm
    }

    stage('Build image') {
        /* This builds the actual image */

        app = docker.build("akashmathwani/highfivesui")
    }

    stage('Test image') {
        
        app.inside {
            echo "Tests passed"
        }
    }

    stage('Push image') {
        /* 
			You would need to first register with DockerHub before you can push images to your account
		*/
        docker.withRegistry('https://registry.hub.docker.com', 'docker-cred') {
                app.push("viaJenkinsBuild${env.BUILD_NUMBER}")
            } 
        echo "Trying to Push Docker Build to DockerHub"
    }

     stage('Push image TO AZURE CONTAINER REGISTERY') {
        /* 
			You would need to first register with DockerHub before you can push images to your account
		*/
        docker.withRegistry('https://highfivesdev.azurecr.io', 'azurecr-cred') {
                app.push("viaJenkinsBuild${env.BUILD_NUMBER}")
            }
        echo "Trying to Push Docker Build to AZURE CONTAINER REGISTERY"
    }
    
}